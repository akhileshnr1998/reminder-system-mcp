{
    "name": "mcp-example",
    "version": "1.0.0",
    "description": "A simple MCP server and client using TypeScript.",
    "main": "dist/mcp_server.js",
    "scripts": {
        "build": "tsc",
        "build:frontend": "cd frontend && npm run build",
        "start": "node dist/mcp_server.js",
        "start:dev": "nodemon --exec \"ts-node --transpile-only\" src/mcp_server.ts",
        "start:email": "nodemon --exec \"ts-node --transpile-only\" src/email-server.ts",
        "start:client": "ts-node --transpile-only src/mcp_client.ts",
        "start:http-client": "ts-node --transpile-only src/mcp_client_http.ts",
        "start:frontend": "cd frontend && npm run dev",
        "start:full": "concurrently \"npm run start:dev\" \"npm run start:email\" \"npm run start:frontend\"",
        "install:frontend": "cd frontend && npm install"
    },
    "dependencies": {
        "@langchain/google-genai": "^0.2.17",
        "@langchain/openai": "^0.6.11",
        "@types/cors": "^2.8.19",
        "@types/nodemailer": "^7.0.1",
        "axios": "^1.7.2",
        "cors": "^2.8.5",
        "dotenv": "^17.2.2",
        "express": "^4.19.2",
        "ics": "^3.8.1",
        "langchain": "^0.3.33",
        "nodemailer": "^7.0.6",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.14.9",
        "concurrently": "^9.2.1",
        "nodemon": "^3.1.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.3"
    }
}
